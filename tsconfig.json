{
    "compilerOptions": {
        "target": "ESNext",
        "sourceMap": true,
        "allowJs": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "noEmit": true,
        "declaration": false,
        "module": "esnext",
        "resolveJsonModule": true,
        "skipLibCheck": true
    },
    "include": [
        "lib/**/*.ts",
        "editor/**/*.ts"
    ]
}